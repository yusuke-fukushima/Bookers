<h1>Editing Book</h1>
<% flash.each do |message_type, message| %>
  <%= message %>
<% end %>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
  <%= link_to "Show", book_path(@book.id) %>
